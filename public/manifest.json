{
  "manifest_version": 3,

  "name": "Highlight FB comments",
  "description": "Highlight Facebook comments of listed users.",
  "version": "1.1",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": {
      "16": "fb-ico-16.png",
      "24": "fb-ico-24.png",
      "32": "fb-ico-32.png",
      "128": "fb-ico.png"
    },
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "fb-ico-16.png",
    "24": "fb-ico-24.png",
    "32": "fb-ico-32.png",
    "128": "fb-ico.png"
  },

  "content_scripts": [
      {
          "matches": ["https://www.facebook.com/*"],
          "js": ["js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
